---
interface Props {
	title: string;
	tagline?: string;
	align?: 'start' | 'center';
}

const { align = 'center', tagline, title } = Astro.props;
---

<div class:list={['hero stack gap-4', align]}>
	<div class="stack gap-2">
		<h1 class="title yipes">{title}</h1>
		{tagline && <p class="tagline">{tagline}</p>}
	</div>
	<slot />
</div>

<style>
	.hero {
		font-size: var(--text-md);
		text-align: center;
	}

	.title,
	.tagline {
		margin-inline: auto;
	}

	.title {
		font-size: var(--text-5xl);
		color: var(--gray-0);
	}

	@font-face {
		font-family: 'Yipes';
		src: url('/fonts/yipes.ttf') format('truetype');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
	.yipes {
		font-family: 'Yipes';
	}

	@media (min-width: 50em) {
		.hero {
			font-size: var(--text-md);
		}

		.start {
			text-align: start;
		}

		.start .title,
		.start .tagline {
			margin-inline: unset;
		}

		.title {
			font-size: var(--text-5xl);
		}
	}
</style>
